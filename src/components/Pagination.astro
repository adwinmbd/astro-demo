---
const { page } = Astro.props
---

<nav class='flex justify-center' aria-label='Pagination'>
    <div class='grid grid-cols-3 w-5/6'>
        <div class='text-left'>
            {page.url.prev && (
            <a class='font-light underline underline-offset-2 decoration-dashed' href={page.url.prev || '#' }>
                &larr; Newer
            </a>
            )}
        </div>
        <div class='text-center font-extralight'>
            Page {page.currentPage} / {page.lastPage}
        </div>
        <div class='text-right'>
            {page.url.next && (
            <a class='font-light underline underline-offset-2 decoration-dashed' href={page.url.next || '#' }>
                Older &rarr;
            </a>
            )}
        </div>
    </div>
</nav>

<style>
    .justify-center {
        justify-content: center;
    }

    .flex {
        display: flex;
    }

    .grid {
        display: grid;
    }

    .grid-cols-3 {
        grid-template-columns: repeat(3, minmax(0, 1fr));
    }

    .w-5\/6 {
        width: 83.333333%;
    }

    .text-left {
        text-align: left;
    }

    .font-extralight {
        font-weight: 200;
    }

    .text-center {
        text-align: center;
    }

    .text-right {
        text-align: right;
    }

    .underline-offset-2 {
        text-underline-offset: 2px;
    }

    .font-light {
        font-weight: 300;
    }

    a {
        color: inherit;
        text-decoration: inherit;
    }

    .underline {
        text-decoration-line: underline;
    }

    .decoration-dashed {
        text-decoration-style: dashed;
    }
</style>